@model AboutYourHolidays.ViewModels.PostViewModels.PostDetailsModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center px-5 orangeContainer">
    <div class="col-12" style="margin-bottom:30px;">
        <input type="button"
               value="Wstecz"
               onclick="location.href='@Url.Action("Index", "Post")'"
               class="myButton" />
    </div>
    <div class="col-6">
        @foreach (var items in Model.Urls)
        {
            <div class="container imgsize">
                <img class="zdjecie img-thumbnail w-100 h-100 d-block w-100" src=@Url.Content(items) />
            </div>
        }
    </div>
    <div class="col-6">
        <h2 class="text-center">@Model.Tilte</h2>
        <p>Dodane przez: @Model.UserId<br /> dnia: @Model.CreatedOn</p>

        <p>Kraj: @Model.Country</p>
        <p>Miasto: @Model.City</p>
        <p>@Model.Description</p>




    </div>
</div>

